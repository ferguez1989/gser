<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <template id="report_ticket_viaje">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="row">
                          <div class="col-4 col-sm-6"><span><img src="o.company_id.logo" width="50px" height="50px"/></span></div>
                          <div class="col-4 col-sm-6">
                            <span t-field="o.company_id.name"/>
                            <span t-field="o.company_id.street"/>
                            <span t-field="o.company_id.zip"/>
                            <span t-field="o.company_id.city"/>
                            <span t-field="o.company_id.state_id"/>
                            <span t-field="o.company_id.country_id"/>
                            <span t-field="o.company_id.phone"/>
                            <span t-field="o.company_id.email"/>
                          </div>
                          <div class="col-4 col-sm-6">logo</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6">barra</div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6">Folio</div>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-sm-12" >
                      <h2 class="bg-secondary text-white">Informacion del viaje</h2>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-light">Tipo de vehículo: <span t-field="o.project_id.conductor"/></div>
                          <div class="col-4 col-sm-6">Asignado por:<span t-field="o.project_id.pmanager"/></div>
                          <div class="col-4 col-sm-6 bg-light">Cliente:<span t-field="o.project_id.cliente"/></div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-light">Carga:<span t-field=""/></div>
                          <div class="col-4 col-sm-6">Correo electrónico:<span t-field=""/></div>
                          <div class="col-4 col-sm-6 bg-light">Dirección:<span t-field=""/></div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-light">Capacidad:<span t-field=""/></div>
                          <div class="col-4 col-sm-6">Teléfono:<span t-field=""/></div>
                          <div class="col-4 col-sm-6 bg-light">Ciudad:<span t-field=""/></div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-light">Producto:<span t-field=""/></div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6 bg-light">Estado:<span t-field=""/></div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-light">Matrícula:<span t-field=""/></div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6 bg-light">Teléfono:<span t-field=""/></div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-light">Conductor:<span t-field=""/></div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6 bg-light">Correo electrónico:<span t-field=""/></div>
                      </div>
                    </div>
                    
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <h2 class="bg-secondary text-white">Informacion del ruta</h2>
                      <div class="row">
                          <div class="col-3 col-sm-6 bg-light">Dirección origen:</div>
                          <div class="col-3 col-sm-6 bg-light">Ciudad:</div>
                          <div class="col-3 col-sm-6 bg-light">Estado:</div>
                          <div class="col-3 col-sm-6 bg-light">País:</div>
                      </div>
                      <div class="row">
                          <div class="col-3 col-sm-6 bg-light">Dirección destino:</div>
                          <div class="col-3 col-sm-6 bg-light">Ciudad:</div>
                          <div class="col-3 col-sm-6 bg-light">Estado:</div>
                          <div class="col-3 col-sm-6 bg-light">País:</div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <h2 class="bg-secondary text-white">Informacion del transferencia</h2>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-light">Banamex</div>
                          <div class="col-4 col-sm-6">Bancomer</div>
                          <div class="col-4 col-sm-6 bg-light">BanBajio</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6">Clave Interbancaria:</div>
                          <div class="col-4 col-sm-6">Clave Interbancaria:</div>
                          <div class="col-4 col-sm-6">Clave Interbancaria:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6">No. Cuenta:</div>
                          <div class="col-4 col-sm-6">No. Cuenta:</div>
                          <div class="col-4 col-sm-6">No. Cuenta:</div>
                      </div>
                      <div class="row">
                          <div class="col-12 col-sm-6"><small>El número del folio debe relacionarse a la transferencia</small></div>
                      </div>
                    </div>
                  </div>
                </div>
            </t>
        </t>
    </t>
  </template>
</odoo>



