<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <template id="report_ticket_viaje">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="row">
                          <div class="col-4 col-sm-6"><span><img t-att-src="o.company_id.logo" width="50px" height="50px"/></span></div>
                          <div class="col-4 col-sm-6">
                            <span t-field="o.company_id.name"/>
                            <span t-field="o.company_id.street"/>
                            <span t-field="o.company_id.zip"/>
                            <span t-field="o.company_id.city"/>
                            <span t-field="o.company_id.state_id"/>
                            <span t-field="o.company_id.country_id"/>
                            <span t-field="o.company_id.phone"/>
                            <span t-field="o.company_id.email"/>
                          </div>
                          <div class="col-4 col-sm-6">logo</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6"><img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', 'project.project_id', 50, 50)"/></div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6" style="color:red; font-size:30px;">Folio: <span t-field="o.id"/></div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-xs-12">
                      <div style="border-bottom: 15px solid black;"></div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12" style="background-color:#6c757d;"><h2 class="text-white">Información del viaje</h2></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-12">
                      <div style="border-bottom: 15px solid black;"></div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-sm-12" >
                      <div class="row">
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">Tipo de vehículo: <span t-field="o.vehiculo.tipo_vehiculo"/></div>
                          <div class="col-4 col-sm-6">Asignado por:<span t-field="o.pmanager"/></div>
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">Cliente:<span t-field="o.project_id.partner_id"/></div>
                      </div>
                      <div class="row">
                      <div class="col-xs-12">
                          <div style="border-bottom: 10px solid black;"></div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">Carga:<span t-field="o.carga_viaje"/></div>
                          <div class="col-4 col-sm-6">Correo electrónico:<span t-field="o.pmanager.email"/></div>
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">Dirección:<span t-field="o.project_id.partner_id.street"/></div>
                      </div>
                      <div class="row">
                      <div class="col-xs-12">
                          <div style="border-bottom: 10px solid black;"></div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">Capacidad:<span t-field="o.capacidad_viaje"/></div>
                          <div class="col-4 col-sm-6">Teléfono:<span t-field="o.pmanager.phone"/></div>
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">Ciudad:<span t-field="o.project_id.partner_id.city"/></div>
                      </div>
                      <div class="row">
                      <div class="col-xs-12">
                          <div style="border-bottom: 10px solid black;"></div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">Producto:<span t-field="o.producto_viaje"/></div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">Estado:<span t-field="o.project_id.partner_id.state_id"/></div>
                      </div>
                      <div class="row">
                      <div class="col-xs-12">
                          <div style="border-bottom: 10px solid black;"></div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 " style="background-color:#dee2e6;">Matrícula:<span t-esc="'%s: %s'% (o.vehiculo.license_plate, o.vehiculo.no_economico)"/></div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6 " style="background-color:#dee2e6;">Teléfono:<span t-field="o.project_id.partner_id.phone"/></div>
                      </div>
                      <div class="row">
                      <div class="col-xs-12">
                          <div style="border-bottom: 10px solid black;"></div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 " style="background-color:#dee2e6;">Conductor:<span t-field="o.conductor"/></div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6 " style="background-color:#dee2e6;">Correo electrónico:<span t-field="o.project_id.partner_id.email"/></div>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-xs-12">
                      <div style="border-bottom: 15px solid black;"></div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12" style="background-color:#6c757d;"><h2 <h2 class="text-white">Información de ruta</h2></div>
                  </div>
                 <div class="row">
                    <div class="col-xs-12">
                      <div style="border-bottom: 15px solid black;"></div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-sm-12">
                      <div class="row">
                          <div class="col-3 col-sm-6" style="background-color:#dee2e6;">Dirección origen:<span t-field="o.project_id.direccion_or"/></div>
                          <div class="col-3 col-sm-6" style="background-color:#dee2e6;">Ciudad:<span t-field="o.project_id.ciudad_or"/></div>
                          <div class="col-3 col-sm-6" style="background-color:#dee2e6;">Estado:<span t-field="o.project_id.estado_or"/></div>
                          <div class="col-3 col-sm-6" style="background-color:#dee2e6;">País:<span t-field="o.project_id.pais_or"/></div>
                      </div>
                      <div class="row">
                      <div class="col-xs-12">
                          <div style="border-bottom: 10px solid black;"></div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-3 col-sm-6" style="background-color:#dee2e6;">Dirección destino:<span t-field="o.project_id.direccion_des"/></div>
                          <div class="col-3 col-sm-6" style="background-color:#dee2e6;">Ciudad:<span t-field="o.project_id.ciudad_des"/></div>
                          <div class="col-3 col-sm-6" style="background-color:#dee2e6;">Estado:<span t-field="o.project_id.estado_des"/></div>
                          <div class="col-3 col-sm-6" style="background-color:#dee2e6;">País:<span t-field="o.project_id.pais_des"/></div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-xs-12">
                      <div style="border-bottom: 15px solid black;"></div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12" style="background-color:#6c757d;"><h2 <h2 class="text-white">Información de transferencia</h2></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-12">
                      <div style="border-bottom: 15px solid black;"></div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-sm-12">
                      <div class="row">
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">Banamex</div>
                          <div class="col-4 col-sm-6">Bancomer</div>
                          <div class="col-4 col-sm-6" style="background-color:#dee2e6;">BanBajio</div>
                      </div>
                      <div class="row">
                        <div class="col-xs-12">
                          <div style="border-bottom: 10px solid black;"></div>
                        </div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6">Clave Interbancaria:</div>
                          <div class="col-4 col-sm-6">Clave Interbancaria:</div>
                          <div class="col-4 col-sm-6">Clave Interbancaria:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6">No. Cuenta:</div>
                          <div class="col-4 col-sm-6">No. Cuenta:</div>
                          <div class="col-4 col-sm-6">No. Cuenta:</div>
                      </div>
                      <div class="row">
                          <div class="col-12 col-sm-6"><small>El número del folio debe relacionarse a la transferencia</small></div>
                      </div>
                    </div>
                  </div>
                </div>
            </t>
        </t>
    </t>
  </template>
</odoo>



