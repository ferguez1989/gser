<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <template id="report_ticket_viaje">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                  <div class="row">
                    <div class="col-sm-12" >
                      <h2  background-color="#9C9795" font-color ="white">Informacion del viaje</h2>
                      <div class="row">
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Tipo de vehículo:</div>
                          <div class="col-4 col-sm-6">Asignado por:</div>
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Cliente</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Carga:</div>
                          <div class="col-4 col-sm-6">Correo electrónico:</div>
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Dirección:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Capacidad:</div>
                          <div class="col-4 col-sm-6">Teléfono:</div>
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Ciudad:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Producto:</div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Estado:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Matrícula:</div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Teléfono:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Conductor:</div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6" background-color="#DEE2E6">Correo electrónico:</div>
                      </div>
                    </div>
                    
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <h2 background-color="#9C9795" font-color ="white">Informacion del ruta</h2>
                      <div class="row">
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">Dirección origen:</div>
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">Ciudad:</div>
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">Estado:</div>
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">País:</div>
                      </div>
                      <div class="row">
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">Dirección destino:</div>
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">Ciudad:</div>
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">Estado:</div>
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">País:</div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <h2 background-color="#9C9795" font-color ="white">Informacion del transferencia</h2>
                      <div class="row">
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">Banamex</div>
                          <div class="col-3 col-sm-6">Bancomer</div>
                          <div class="col-3 col-sm-6" background-color="#DEE2E6">BanBajio</div>
                      </div>
                      <div class="row">
                          <div class="col-3 col-sm-6">Clave Interbancaria:</div>
                          <div class="col-3 col-sm-6">Clave Interbancaria:</div>
                          <div class="col-3 col-sm-6">Clave Interbancaria:</div>
                      </div>
                      <div class="row">
                          <div class="col-3 col-sm-6">No. Cuenta:</div>
                          <div class="col-3 col-sm-6">No. Cuenta:</div>
                          <div class="col-3 col-sm-6">No. Cuenta:</div>
                      </div>
                    </div>
                  </div>
                </div>
            </t>
        </t>
    </t>
  </template>
</odoo>



