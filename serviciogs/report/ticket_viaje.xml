<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <template id="report_ticket_viaje">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                  <div class="row">
                    <div class="col-sm-12" >
                      <h2 class="bg-secondary text-white">Informacion del viaje</h2>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-info">Tipo de vehículo:</div>
                          <div class="col-4 col-sm-6">Asignado por:</div>
                          <div class="col-4 col-sm-6 bg-info">Cliente</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-info">Carga:</div>
                          <div class="col-4 col-sm-6">Correo electrónico:</div>
                          <div class="col-4 col-sm-6 bg-info">Dirección:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-info">Capacidad:</div>
                          <div class="col-4 col-sm-6">Teléfono:</div>
                          <div class="col-4 col-sm-6 bg-info">Ciudad:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-info">Producto:</div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6 bg-info">Estado:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-info">Matrícula:</div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6 bg-info">Teléfono:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-info">Conductor:</div>
                          <div class="col-4 col-sm-6"></div>
                          <div class="col-4 col-sm-6 bg-info">Correo electrónico:</div>
                      </div>
                    </div>
                    
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <h2 class="bg-secondary text-white">Informacion del ruta</h2>
                      <div class="row">
                          <div class="col-3 col-sm-6 bg-info">Dirección origen:</div>
                          <div class="col-3 col-sm-6 bg-info">Ciudad:</div>
                          <div class="col-3 col-sm-6 bg-info">Estado:</div>
                          <div class="col-3 col-sm-6 bg-info">País:</div>
                      </div>
                      <div class="row">
                          <div class="col-3 col-sm-6 bg-info">Dirección destino:</div>
                          <div class="col-3 col-sm-6 bg-info">Ciudad:</div>
                          <div class="col-3 col-sm-6 bg-info">Estado:</div>
                          <div class="col-3 col-sm-6 bg-info">País:</div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <h2 class="bg-secondary text-white">Informacion del transferencia</h2>
                      <div class="row">
                          <div class="col-4 col-sm-6 bg-info">Banamex</div>
                          <div class="col-4 col-sm-6">Bancomer</div>
                          <div class="col-4 col-sm-6 bg-info">BanBajio</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6">Clave Interbancaria:</div>
                          <div class="col-4 col-sm-6">Clave Interbancaria:</div>
                          <div class="col-4 col-sm-6">Clave Interbancaria:</div>
                      </div>
                      <div class="row">
                          <div class="col-4 col-sm-6">No. Cuenta:</div>
                          <div class="col-4 col-sm-6">No. Cuenta:</div>
                          <div class="col-4 col-sm-6">No. Cuenta:</div>
                      </div>
                    </div>
                  </div>
                </div>
            </t>
        </t>
    </t>
  </template>
</odoo>



