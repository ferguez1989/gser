<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="serviciogserprimario_view_form" model="ir.ui.view">
        <field name="name">serviciogserprimario.view.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"></field>
        <field name="arch" type="xml">
          <field name="user_ids" position="after">
            <field name="status_viaje"/>
            <field name="tipo_ruta_viaje" readonly ="1" />
            <field name="carga_viaje" readonly ="1" />
            <field name="capacidad_viaje" readonly ="1"/>
            <field name="producto_viaje" readonly ="1"/>
            <field name="vehiculo" domain="[('tipo_vehiculo', '=', 1)]"/>
            <field name="anio_vehiculo" readonly="1"/>
            <field name="remolque_1" domain="[('tipo_vehiculo', '=', 2)]" />
            <field name="remolque_2"/>
            <field name="conductor" readonly ="1"/>
            <field name="gasto_total_op_viaje" readonly ="1"/>
            <field name="gasto_total_caseta_viaje" readonly ="1"/>
            <field name="disel_viaje" readonly ="1"/>
            <field name="km_viaje" readonly ="1"/>
            <field name="carga_combustible"/>  
          </field>
          <field name="sale_line_id" position="replace">
            <field name="sale_line_id" invisible="1"></field>
          </field>
          <field name="partner_phone" position="after">
            <field name="pmanager"  domain="[('name', '=', 'Brandon Freeman')]"></field>
          </field>
         
            <page name="description_page" position="after">
            <group string="Facturacion y Cobranza">
              <group>
                <group string="">
                  <field name="Cantidad"/>           
                  <field name="Precio_ruta_Litro" readonly="1"/>
                  <field name="Subtotal" readonly="1"/>
                  <field name="Iva" readonly="1"/>
                  <field name="Retencion" readonly="1"/>
                  <field name="Total_Facturar" readonly="1"/>
                </group> 
                <group string="">
                  <field name="Forma_pago"/>           
                  <field name="No_Factura"/>
                  <field name="Fecha_Factura"/>
                  <field name="Fecha_Pago"/>
                </group>                
              </group>
            </group>
          </page>
          
        </field>
    </record>
    <record id="project_task_tree_fsm" model="ir.ui.view">
      <field name="name">project.task.tree.fsm</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="industry_fsm.project_task_view_list_fsm"/>
      <field name="arch" type="xml">
        <tree>
          
          
          <field name="child_text" position="replace" invisible="1" optional="hide"/>
          <field name="priority" position="replace" widget="priority" optional="hide" nolabel="1"/>
          <field name="name" position="replace" widget="name_with_subtask_count" optional="hide"/>
          <field name="project_id" position="replace" readonly="1" optional="hide"/>
          
          
          <field name="partner_id" optional="show"/>
          <field name="id" optional="show"/>
          <field name="status_viaje" optional="show"/>
          <field name="name" optional="show"/>
          <field name="project_id" readonly="1" optional="show"/>
          <field name="conductor" optional="show"/>
          <field name="create_date" optional="show"/>
          <field name="carga_combustible" optional="show"/>
          <field name="disel_viaje" optional="show"/>
          <field name="conductor" optional="show"/>
          <field name="gasto_total_op_viaje" optional="show" sum="Sum of gasto_total_op_viaje"/>
          <field name="gasto_total_caseta_viaje" optional="show" sum="Sum of gasto_total_caseta_viaje"/>
          <field name="Total_Facturar" optional="show" sum="Sum of gasto_total_caseta_viaje"/>
          <field name="No_Factura" optional="show"/>
                
          <field name="user_ids" widget="many2many_avatar_user" optional="hide" invisible="context.get('user_invisible', False)" domain="[('share', '=', False), ('active', '=', True)]"/>
          <field name="company_id" optional="hide" groups="base.group_multi_company" readonly="1"/>
          <field name="planned_date_begin" optional="hide"/>
          <field name="planned_date_end" optional="hide"/>
          <field name="planned_hours" widget="timesheet_uom_no_toggle" sum="Initially Planned Hours" optional="hide"/>
          <field name="effective_hours" widget="timesheet_uom" sum="Effective Hours" optional="hide"/>
          <field name="remaining_hours" widget="timesheet_uom" sum="Remaining Hours" optional="hide" decoration-danger="progress &gt;= 100" decoration-warning="progress &gt;= 80 and progress &lt; 100"/>
          <field name="subtask_effective_hours" widget="timesheet_uom" optional="hide"/>
          <field name="total_hours_spent" widget="timesheet_uom" optional="hide"/>
          <field name="progress" widget="progressbar" optional="hide" groups="hr_timesheet.group_hr_timesheet_user"/>
          
          <field name="user_ids" position="replace">
          <field name="activity_ids" optional="hide"/>
          </field>

          <field name="tag_ids" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
          <field name="kanban_state" widget="state_selection" optional="hide" readonly="1"/>
          <field name="stage_id" optional="hide"/>
          <field name="activity_exception_decoration" widget="activity_exception"/> 
        </tree>
      </field>  
    </record>
