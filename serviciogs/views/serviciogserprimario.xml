<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="serviciogserprimario_view_form" model="ir.ui.view">
        <field name="name">serviciogserprimario.view.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"></field>
        <field name="arch" type="xml">
          <field name="user_ids" position="after">
            <field name="status_viaje"/>
            <field name="tipo_ruta_viaje" readonly ="1" />
            <field name="carga_viaje" readonly ="1" />
            <field name="capacidad_viaje" readonly ="1"/>
            <field name="producto_viaje" readonly ="1"/>
            <field name="vehiculo" domain="[('tipo_vehiculo', '=', 1)]"/>
            <field name="anio_vehiculo" readonly="1"/>
            <field name="remolque_1" domain="[('tipo_vehiculo', '=', 2)]" />
            <field name="remolque_2"/>
            <field name="conductor" readonly ="1"/>
            <field name="gasto_total_op_viaje" readonly ="1"/>
            <field name="gasto_total_caseta_viaje" readonly ="1"/>
            <field name="disel_viaje" readonly ="1"/>
            <field name="km_viaje" readonly ="1"/>
            <field name="carga_combustible"/>  
          </field>
          <field name="sale_line_id" position="replace">
            <field name="sale_line_id" invisible="1"></field>
          </field>
          <field name="partner_phone" position="after">
            <field name="pmanager"  domain="[('name', '=', 'Brandon Freeman')]"></field>
          </field>
         
            <page name="description_page" position="after">
            <group string="Facturacion y Cobranza">
              <group>
                <group string="">
                  <field name="Cantidad"/>           
                  <field name="Precio_ruta_Litro" readonly="1"/>
                  <field name="Subtotal" readonly="1"/>
                  <field name="Iva" readonly="1"/>
                  <field name="Retencion" readonly="1"/>
                  <field name="Total_Facturar" readonly="1"/>
                </group> 
                <group string="">
                  <field name="Forma_pago"/>           
                  <field name="No_Factura"/>
                  <field name="Fecha_Factura"/>
                  <field name="Fecha_Pago"/>
                </group>                
              </group>
            </group>
          </page>
          
        </field>
    </record>

    <record id="project.view_task_tree2" model="ir.ui.view">
      <field name="name">project.task.tree</field>
      <field name="model">project.task</field>
      <field name="arch" type="xml">
        <tree string="Tasks" multi_edit="1" sample="1" js_class="project_list">
          <field name="message_needaction" invisible="1" readonly="1"/>
          <field name="is_closed" invisible="1"/>
          <field name="allow_subtasks" invisible="1"/>
          <field name="sequence" invisible="1" readonly="1"/>
          <field name="priority" widget="priority" optional="show" nolabel="1"/>
          <field name="name" widget="name_with_subtask_count"/>
          <field name="child_text" invisible="1"/>
          <field name="project_id" optional="show" readonly="1"/>
          <field name="status_viaje" optional="show" readonly="1"/>
          <field name="partner_id" optional="hide"/>
          <field name="parent_id" optional="hide" attrs="{'invisible': [('allow_subtasks', '=', False)]}" groups="base.group_no_one"/>
          <field name="user_ids" optional="show" widget="many2many_avatar_user" domain="[('share', '=', False), ('active', '=', True)]"/>
          <field name="company_id" groups="base.group_multi_company" optional="show"/>
          <field name="activity_ids" widget="list_activity" optional="show"/>
          <field name="date_deadline" optional="hide" widget="remaining_days" attrs="{'invisible': [('is_closed', '=', True)]}"/>
          <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show"/>
          <field name="kanban_state" widget="selection" optional="hide"/>
          <field name="stage_id" invisible="context.get('set_visible',False)" optional="show" readonly="not context.get('default_project_id')"/>
          <field name="recurrence_id" invisible="1"/>
        </tree>
      </field>

    </record>


</odoo>
