<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="serviciogserRuta_view_form" model="ir.ui.view">
        <field name="name">serviciogserRuta.view.form</field>
        <field name="model">serviciogserRuta</field>
        <field name="arch" type="xml">
            <field name="contacto_facturacion" domain="[('parent_id', '=', partner_id)]"/>
            <field name="email_facturacion"/>  
            <field name="ord_vent" domain="[('partner_id', '=', partner_id)]"/>
        </field>
    </record>

    <record id="serviciogserRuta_view_tree" model="ir.ui.view">
        <field name="name">serviciogserRuta.view.tree</field>
        <field name="model">serviciogserRuta</field>
        <field name="arch" type="xml">
            <tree string="serviciogserRuta Tree">
                <field name="marca"/>
                            <field name="contacto_facturacion"/>
                            <field name="email_facturacion"/>
                            <field name="ord_vent"/>
            </tree>
        </field>
    </record>

    <record id="serviciogserRuta_action" model="ir.actions.act_window">
        <field name="name">serviciogserRuta</field>
        <field name="res_model">serviciogserRuta</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{'search_default_my_services': 1}"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first course
            </p>
        </field>
    </record>

    <menuitem id="serviciogserRuta_menu" name="serviciogserRuta" parent="serviciogserRuta_menu" action="serviciogserRuta_action"/>
</odoo>